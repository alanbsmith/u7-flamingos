---
import dayjs from 'dayjs';

interface Props {
  date: string;
  homeTeam: string;
  awayTeam: string;
  isNextMatch?: boolean;
  status: string;
  location: string;
}

const { date, homeTeam, awayTeam, location } = Astro.props;

const formattedMonth = dayjs(date).format('MMM');
const fomattedDay = dayjs(date).format('DD');
const formattedTime = dayjs(date).format('h:mma');
---

<li class="match">
  <div class="match__date">
    <div class="match__month">{formattedMonth}</div>
    <div class="match__day">{fomattedDay}</div>
  </div>
  <div class="match__info">{formattedTime} | {location}</div>
  <div class="match__teams">
    <span>{homeTeam}</span><span class="vs"> vs </span><span class="away">{awayTeam}</span></div>
</li>

<style>
  .match {
    display: grid;
    grid-template-columns: 5rem 1fr;
    grid-template-rows: max-content 1fr 1fr;
    row-gap: 0.5rem;
    grid-column-gap: 1rem;
    padding: 1rem;
    transition: background-color 250ms ease;
  }

  .match__date {
    display: flex;
    flex-direction: column;
    background-color: rgba(255,0,234, 0.2);
    color: #fff;
    border: solid 2px var(--color-accent-default);
    align-items: center;
    justify-content: center;
    font-weight: bold;
    height: 5rem;
    grid-row: 1 / span 2;
    border-radius: 2.5rem;
  }
  
  .match__month {
    font-weight: 300;
    text-transform: uppercase;
    font-size: 1rem;
  }
  
  .match__day {
    font-weight: bold;
    font-size: 1.75rem;
  }

  .match__info {
    font-size: 1.125rem;
    color: var(--color-accent-default);
  }

  .match__teams {
    display: grid;
    grid-template-columns: 1fr min-content 1fr;
    gap: 0.5rem;
    color: #fff;
    font-size: 1.125rem;
  }

  .vs {
    display: flex;
    justify-content: center;
  }

  .away {
    text-align: end;
  }

  .match__score {
    display: flex;
    flex: 1;
    padding: 1rem;
    align-items: center;
    justify-content: center;
  }

  .match:last-child() {
    margin-bottom: 12rem;
  }
</style>