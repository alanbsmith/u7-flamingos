---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<section class="hero">
  <div class="hero__container">
    <h1 class="hero__title">{title}</h1>
    <slot />
  </div>
</section>
<style>
  .hero {
    border-bottom: 0.125rem solid #ff00ea;
    position: sticky;
    top: 0;
    z-index: 1;
    backdrop-filter: blur(2rem);
    background-color: rgba(255,0,234, 0.2);
  }
  
  .hero__container {
    display: grid;
    padding: 1rem;
    gap: 1rem;
    min-height: 8rem;
    align-items: flex-end;
    grid-template-columns: 1fr max-content;
    max-width: 48rem;
    margin-inline: auto;
    align-items: end;
  }
  
  .hero__title {
    font-size: 2.25rem;
    font-weight: bold;
    margin: 0;
    color: #fff;
	}

</style>