---
interface Props {
  number: string;
  firstName: string;
  lastName: string;
}

const { number, firstName, lastName } = Astro.props;
---

<li class="player">
  <div class="player__number">{number}</div>
  <p class="player__first-name">{firstName}</p>
  <p class="player__last-name">{lastName}</p>
</li>
<style>
  .player {
    display: grid;
    grid-template-columns: 5rem 1fr;
    grid-template-rows: repeat(2, 1fr);
    grid-column-gap: 1rem;
    box-sizing: #ff00ea 0 0 10px;
    padding: 1rem;
  }

  .player:last-child() {
    margin-bottom: 12rem;
  }


  .player__number {
    display: flex;
    background-color: rgba(255,0,234, 0.2);
    color: #fff;
    border: solid 2px var(--color-accent-default);
    align-items: center;
    justify-content: center;
    font-size: 2rem;
    font-weight: bold;
    height: 5rem;
    grid-row: 1 / span 2;
    border-radius: 2.5rem;
  }

  .player__first-name {
    margin: 0;
    font-size: 1.5rem;
    align-items:end;
    display: grid;
    color: rgba(255,0,234,1);
  }

  .player__last-name {
    margin: 0;
    font-size: 1.5rem;
    font-weight: bold;
    font-style: italic;
    color: #fff;
  }
</style>