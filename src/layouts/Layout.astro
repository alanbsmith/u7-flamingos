---
import Nav from '../components/Nav.astro';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
		href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:ital,wght@0,400;0,700;1,400;1,700&display=swap"
		rel="stylesheet"
		/>
		<title>Erie Pink Flamingo SC</title>
	</head>
	<body>
		<Nav />
		<slot />
	</body>
</html>

<style is:global>
	:root {
		--color-bg-default: #111;
		--color-accent-default: #ff00ea;
		--color-accent-soft: rgba(255,0,234,0.8);
	}

	* {
		box-sizing: border-box;
	}

	html,
	body {
    margin: 0;
		min-height: 100vh;
		background-color: var(--color-bg-default);
		font-family: Roboto Condensed, sans serif;
		display: flex;
		flex-direction: column;
  }

	ul {
		list-style: none;
		margin: 0;
		padding: 0;
	}

  main {
		margin: 0 auto;
		display: flex;
		flex-direction: column;
  	min-width: 24rem;
		padding: 0 1rem;
		transition: padding 250ms;
		max-height: -webkit-fill-available;
    position: relative;
  }

	.container {
		display: grid;
		grid-template-columns: repeat(autofit, minmax(48rem, 1fr));
	}

	@media (min-width: 48rem) {
		.container {
			width: 48rem;
			margin-inline: auto;
		}
	}
</style>
